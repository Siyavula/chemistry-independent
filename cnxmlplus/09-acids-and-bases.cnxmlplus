	\rput(0,0){\textbf{N}}
	\psline(-0.2,0.2)(-0.8,0.8)
	\rput(-1,1){\textbf{H}}
	\psline(-0.2,-0.2)(-0.8,-0.8)
	\rput(-1,-1){\textbf{H}}
	\rput(-1.5,0){(a)}
	
	\rput(1.5,0){(b)}
	\psline(2.2,-0.8)(2.8,-0.2)
	\rput(3,0){\textbf{C}}
	\psline(2.95,0.2)(2.95,0.8)
	\psline(3.05,0.2)(3.05,0.8)
