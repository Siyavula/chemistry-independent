		      <tbody>
			<row>
			  <entry>
			    <para><emphasis effect="bold">R</emphasis>eaction</para>
			  </entry>
			  <entry>
			    <para><latex>\textcolor{blue}{\textbf{aA}}</latex></para>
			  </entry>
			  <entry>
			    <para><latex>\textcolor{blue}{\textbf{bB}}</latex></para>
			  </entry>
			  <entry>
			    <para><latex>\textcolor{red}{\textbf{cC}}</latex></para>
			  </entry>
			  <entry>
			    <para><latex>\textcolor{red}{\textbf{dD}}</latex></para>
			  </entry>
			</row>
			<row>
			  <entry>
			    <para><emphasis effect="bold">I</emphasis>nitial quantity (mol)</para>
			  </entry>
			  <entry/>
			  <entry/>
			  <entry/>
			  <entry/>
			</row>
			<row>
			  <entry>
			    <para><emphasis effect="bold">C</emphasis>hange (mol)</para>
			  </entry>
			  <entry/>
			  <entry/>
			  <entry/>
			  <entry/>
			</row>
			<row>
			  <entry>
