		      <para><chem_compound>[Cl_{2}]</chem_compound> = <unit_number><number>0.6</number><unit>mol.dm<sup>-3</sup></unit></unit_number></para>
		      <para><chem_compound>[COCl_{2}]</chem_compound> = <unit_number><number>0.75</number><unit>mol.dm<sup>-3</sup></unit></unit_number></para>
		    </workstep>
